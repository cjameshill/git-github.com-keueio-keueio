{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "lib": [
            "es2021"
        ],
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}